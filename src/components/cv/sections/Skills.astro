import { skills } from "@cv-en"

---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name, level }, index) => {
        return (  
          <li>
            <span>{name} -</span>
            <span>{level}</span>
          </li>
          <div class="print">
            {
              skills.length - 1 !== index && (
                <span> â€¢ </span>
              )
            }
          </div>
        )
      })
    }
