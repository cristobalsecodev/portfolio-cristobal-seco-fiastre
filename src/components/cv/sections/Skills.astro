---
import Section from "../Section.astro"

import { skills } from "@cv-es"
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name, level }) => (
        <li>
          <span>{name}</span>
          <span>{level}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: #111;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>